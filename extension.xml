<root version="1.5" release="1">
	<announcement text="5E Height Indication by GKEnialb" font="emotefont" icon="GKElogo" />
	
	<properties>
		<name>5E Height Indication</name>
		<version>1.5</version>
		
		<author>Good King Enialb</author>
		<description>Provides the ability to indicate a token's height with the mouse wheel.</description>
		
		<ruleset>
			<name>5E</name>
		</ruleset>			
	</properties>    	

	<base>	
		<!-- icon -->
		<icon name="GKElogo" file="graphics/icons/GKE_Logo.png" />	
		
		<!-- strings -->
		<includefile source="strings/height_strings.xml"/>
		
		<!-- scripts -->
		<script name="TokenHeight" file="scripts/token_height_indication.lua" />
		
	</base>	

</root>