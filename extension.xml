<root version="1.6" release="1">
	<announcement text="5E Height Indication v1.6 by GKEnialb" font="emotefont" icon="GKElogo" />
	
	<properties>
		<name>5E Height Indication</name>
		<version>1.6</version>
		
		<author>Good King Enialb</author>
		<description>Provides the ability to indicate a token's height with the mouse wheel.</description>
		
		<ruleset>
			<name>5E</name>
		</ruleset>			
	</properties>    	

	<base>	
		<!-- icon -->
		<icon name="GKElogo" file="graphics/icons/GKE_Logo.png" />	
		
		<!-- strings -->
		<includefile source="strings/height_strings.xml"/>
		
		<!-- scripts -->
		<script name="TokenHeight" file="scripts/token_height_indication.lua" />
	
		<!-- override coreRPG: /campaigns/scripts/image.lua -->			
		<template name="image_record_step">
			<imagecontrol name="image">
				<indicators locked="image_locked" loading="image_loading" />
				<default snap="on" drawingsize="500,500" />
				<script file="campaign/scripts/image.lua" />
			</imagecontrol>
		</template>	
	</base>	

</root>